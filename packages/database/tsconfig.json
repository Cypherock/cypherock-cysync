{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2015"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "sourceMap": true
  },
  "extends": "@cypherock/tsconfig/node.json",
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "src/repository/TestRepository/.ts"
  ],
  "exclude": ["node_modules", "src/coverage"]
}
