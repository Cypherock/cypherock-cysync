{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "packages": {
      "inputs": ["packages/*"]
    },
    "build": {
      "dependsOn": ["^packages"],
      "outputs": ["out/**"],
      "inputs": ["apps/*"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
