{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["turbo.json"],
  "pipeline": {
    "packages": {
      "inputs": ["packages/*"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false
    },
    "dev:setup": {
      "dependsOn": ["^dev:setup"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "tsconfig_cjs.json"]
    },
    "@cypherock/cysync-desktop#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "dist-electron/**"],
      "inputs": [
        "src/**",
        "renderer/**",
        "public/**",
        "html/**",
        "package.json",
        "tsconfig.json",
        "tsconfig.node.json",
        "vite.config.js",
        "vite.loading.config.js"
      ]
    },
    "watch:build": {
      "cache": false,
      "persistent": true
    },
    "make": {
      "dependsOn": ["build", "^make"],
      "cache": false
    },
    "pre-commit": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "tests/**"]
    },
    "e2e": {
      "dependsOn": ["build"],
      "inputs": ["e2e/**"]
    },
    "lint:check": {
      "inputs": ["src/**", "tests/**"]
    },
    "lint": {
      "inputs": ["src/**", "tests/**"],
      "cache": false
    },
    "pretty:check": {
      "inputs": ["src/**", "tests/**"]
    },
    "pretty": {
      "inputs": ["src/**", "tests/**"],
      "cache": false
    }
  }
}
