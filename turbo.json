{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "packages": {
      "inputs": ["packages/*"]
    },
    "start": {
      "dependsOn": ["^build", "^start"],
      "cache": false
    },
    "build": {
      "dependsOn": ["prebuild", "^build"],
      "inputs": ["."],
      "outputs": ["dist/**", ".vite/**"]
    },
    "prebuild": {
      "cache": true,
      "inputs": ["scripts/prebuild.sh"]
    },
    "make": {
      "dependsOn": ["build", "^make"],
      "inputs": ["."],
      "cache": false
    }
  }
}
